<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Disable logback's own status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    
    <!-- Default console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for debug logs -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.FileAppender">
        <file>/data/data/com.termux/files/home/work/sources/yamsergey.adt.ls.v2/debug-android.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Root logger configuration - quiet by default -->
    <root level="WARN">
        <!-- No console appender by default -->
    </root>
    
    <!-- Our package logger configuration - only to file by default -->
    <logger name="io.yamsergey.adt.tools" level="INFO" additivity="false">
        <appender-ref ref="DEBUG_FILE" />
    </logger>
</configuration>